generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  status    String    @default("active")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  payments  Payment[]

  @@map("users")
}

model Customer {
  id              String    @id @default(uuid())
  name            String
  email           String    @unique
  phone           String
  district        String
  manager         String
  due_date        DateTime
  amount          Float
  status          String    @default("active")
  paymentMethod   String    @default("credit_card")
  imageLogo       String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  next_invoice_at DateTime?
  payments        Payment[]

  @@map("customers")
}

model Payment {
  id            String    @id @default(uuid())
  customerId    String
  userId        String
  amount        Float
  status        String    @default("unpaid")
  due_date      DateTime
  userName      String
  paymentMethod String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  payment_date  DateTime?
  customer      Customer  @relation(fields: [customerId], references: [id])
  user          User      @relation(fields: [userId], references: [id])

  @@index([customerId], map: "payments_customerId_fkey")
  @@index([userId], map: "payments_userId_fkey")
  @@map("payments")
}
